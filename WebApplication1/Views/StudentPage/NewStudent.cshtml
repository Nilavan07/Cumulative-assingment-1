        <div class="inputrow">
            <label for="StudentFname">First Name:</label>
            <input type="text" id="StudentFname" name="StudentFname" />

        </div>
        <div class="inputrow">
            <label for="StudentLname">Last Name:</label>
            <input type="text" id="StudentLname" name="StudentLname" />

        </div>
        <div class="inputrow">
            <label for="StudentNumber">Student Number:</label>
            <input type="number" id="StudentNumber" name="StudentNumber" />

        </div>
        <div class="inputrow">
            <label for="StudentEnrolmentDate">Enrolment Date:</label>
            <input type="date" id="StudentEnrolmentDate" name="StudentEnrolmentDate" />

        </div>
        <div class="inputrow">
            <input type="submit" value="Create Student" />
        </div>
    </form>
</div>


